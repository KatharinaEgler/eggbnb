<h1> Your bookings</h1>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Chicken Booking</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Chicken name</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Price per day</th>
            <th>Total</th>
          </thead>
          <% @bookings.each do |booking| %>
            <tr>
              <%= link_to booking_path(booking) do %>
                <td><%= booking.chicken.name %></td>
                <td><%= booking.start_date %></td>
                <td><%= booking.end_date %></td>
                <td>$<%= (booking.chicken.price.to_f)/100 %></td>
                <td>$<%= ( booking.end_date.jd - booking.start_date.jd ) * booking.chicken.price.to_f/100 %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
