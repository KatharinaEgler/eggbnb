<h1> Your bookings</h1>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Chicken Booking</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>User</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Price per day</th>
            <th>Total</th>
          </thead>
          <% @bookings.each do |booking| %>
            <tr>
              <td><%= @booking.user.name %></td>
              <td><%= @booking.start_date %></td>
              <td><%= @booking.end_date %></td>
              <td>$<%= @booking.chicken.price %></td>
              <td><%= ( @booking.start_date - @booking.end_date ) * @booking.chicken.price %></td>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
