
<div class="container">
  <h2> <%= @chicken.name %> </h2>
  <%= link_to "Back to all chickens", chickens_path %>
<br>
  <%= cl_image_tag @chicken.photo, height: 300, width: 400, crop: :fill %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Chicken characteristic</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Age</th>
            <th>Egg number per day</th>
            <th>Egg color</th>
            <th>Description</th>
          </thead>
            <tr>
              <td><%= @chicken.age %> years old</td>
              <td>
                <% @chicken.egg_volume.times do %>
                  <i class="fas fa-egg"></i>
                <% end %>
                </td>
              <td><%= @chicken.egg_color %></td>
              <td><%= @chicken.description %></td>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

<%= simple_form_for [@chicken, @booking] do |f| %>
  <%= f.input :start_date, as: :date, start_year: Date.today.year, order: [:day, :month, :year], html5: true %>
  <%= f.input :end_date, as: :date, start_year: Date.today.year, order: [:day, :month, :year], html5: true %>
  <p>$<%= @chicken.price %></p>
  <br>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to all chickens", chickens_path %>


