<div class="banner-content">
  <h2>CHICKENS INDEX</h2>
  <p>Awesome chicken to nest egg! </p>
  <%= link_to "Add a chicken", new_chicken_path, class: "btn btn-primary btn-lg btn-block" %>
</div>

<div class="chickens-container">
  <div class="cards">
    <% @chickens.each do |chicken| %>

      <div class="chicken-card">
        <a href= <%= chicken_path(chicken) %> >
          <% if chicken.photo? %>
            <% background_url = cl_image_path chicken.photo, width: 400, height: 500, crop: :fill %>
          <% else %>
            <% background_url = 'https://images.unsplash.com/photo-1501200291289-c5a76c232e5f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2781&q=80' %>
          <% end %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.4)), url('<%= background_url %>');">
            <div class="card-description">
              <h2><strong><%=chicken.name%></strong></h2>
              <p>$<%= (chicken.price.to_f)/100 %> per day </p>
            </div>
          </div>
        </a>
    </div>
    <% end %>
  </div>
<div
  id="map"
  style="width: 60%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>
